<%- include ('../includes/header') %>
    <div class="container-fluid">
        <div class="row my-4">
            <div class="col-12 mx-auto">
                <div class="card">
                    <div class="card-body bg-light">
                        <a href="/home/admin" class="btn btn-sm btn-secondary mr-2 mb-2">
                            <i class="fas fa-home"></i>
                        </a>
                        <form action="/comment/searchcomment" method="post" class="float-right mb-2 d-flex flex-row">
                            <input type="text" class="form-control" name="creator" placeholder="Recherche">
                            <button class="btn btn-info btn-sm" name="find" type="submit"><i class="fas fa-search"></i></button>
                        </form>
                        <table class="table table-hover">
                          <thead>
                            <tr>
                              <th scope="col">creator</th>
                              <th scope="col">article</th>
                              <th scope="col">content</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% data.forEach(function(e) { %>
                                <tr>
                                  <th scope="row"><%=e.creator%></th>
                                  <th scope="row"><%=e.article%></th>
                                  <th scope="row"><%=e.content%></th>
                                  <td class="d-flex flex-row">
                                      <form method="post" class="mr-1" action="/comment/getcomment">
                                          <input type="hidden" name="id" value= "<%=e.id%>" >
                                          <button class="btn btn-sm btn-warning"><i class="fa fa-edit"></i></button>
                                      </form>
                                      <form method="post" class="mr-1" action="/comment/deletecomment">
                                          <input type="hidden" name="id" value= "<%=e.id%>">
                                          <button class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></button>
                                      </form>
                                  </td>
                                </tr>
                            <% }) %>
                          </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include ('../includes/footer') %>