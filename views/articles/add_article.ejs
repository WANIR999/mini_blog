<%- include ('../includes/header') %>

<div class="container">
	<div class="row my-4">
		<div class="col-8 mx-auto">
			<div class="card">
				<div class="card-header">Add an article</div>
				<div class="card-body bg-light">
					<a href="/home/admin" class="btn btn-sm btn-secondary mr-2 mb-2">
						<i class="fas fa-home"></i>
					</a>
					<form action="/article/createarticle" method="post">
						<div class="form-group">
							<label for="nom">content*</label>
							<input type="text" name="content" class="form-control" placeholder="Nom">
						</div>
						<div class="form-group">
							<label for="prenom">creator*</label>
							<input type="text" name="creator" class="form-control" placeholder="PrÃ©nom">
						</div>
						<div class="form-group">
							<label  class="profile-label">categorie</label>
							 <select class="form-select" name="categorie" aria-label="Default select example">
								<option selected>Open this select menu</option>
								<% data.forEach (e=>{%>
                                    <option style="width: 200px;" value="<%=e.id%>" ><%=e.label%></option>
                                <% });%>
							   </select>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary" name="submit">Valider</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

