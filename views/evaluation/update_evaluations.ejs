<%- include ('../includes/header') %>

<div class="container">
	<div class="row my-4">
		<div class="col-8 mx-auto">
			<div class="card">
				<div class="card-header">update evaluation</div>
				<div class="card-body bg-light">
					<a href="/home/admin" class="btn btn-sm btn-secondary mr-2 mb-2">
						<i class="fas fa-home"></i>
					</a>
					<form action="/evaluation/updateevaluation" method="post">
						<div class="form-group">
							<label for="nom">creator*</label>
							<input type="text" name="creator" value="<%=data.creator%>" class="form-control" placeholder="Nom">
							<input type="hidden" name="id" value="<%=data.id%>" class="form-control" placeholder="Nom">
						</div>
						<div class="form-group">
							<label for="nom">type*</label>
							<input type="text" name="type" value="<%=data.type%>" class="form-control" placeholder="Nom">
						</div>
						<div class="form-group">
							<label for="nom">article*</label>
							<input type="text" name="article" value="<%=data.article%>" class="form-control" placeholder="Nom">
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary" name="submit">Valider</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
