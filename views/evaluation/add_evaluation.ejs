<%- include ('../includes/header') %>

<div class="container">
	<div class="row my-4">
		<div class="col-8 mx-auto">
			<div class="card">
				<div class="card-header">Add an evaluation</div>
				<div class="card-body bg-light">
					<a href="/home/admin" class="btn btn-sm btn-secondary mr-2 mb-2">
						<i class="fas fa-home"></i>
					</a>
					<form action="/evaluation/createevaluation" method="post">
						<div class="form-group">
							<label for="nom">creator*</label>
							<input type="text" name="creator" class="form-control" placeholder="Nom">
						</div>
						<div class="form-group">
							<label for="nom">evaluation*</label>
							<input type="text" name="type" class="form-control" placeholder="Nom">
						</div>
						<div class="form-group">
							<label for="nom">article*</label>
							<input type="text" name="article" class="form-control" placeholder="Nom">
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary" name="submit">Valider</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<%- include ('../includes/footer') %>